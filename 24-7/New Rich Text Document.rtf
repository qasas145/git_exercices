public class Solution {
    public int[] TwoSum(int[] numbers, int target) {
        int left = 0;
        int right = numbers.Length-1;
        int total;
        while (left < right) {
            total = numbers[left] + numbers[right];
            if (total == target) {
                break;
            }
            else if (total > target) {
                right--;
            }
            else {
                left++;
            }
        }
        return [++left, ++right];
    }
}